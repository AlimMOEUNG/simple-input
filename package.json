{
  "name": "simple-input-translator",
  "version": "1.0.0",
  "description": "Simple Chrome extension to translate text in inputs with keyboard shortcut (Alt+T)",
  "type": "module",
  "scripts": {
    "build:chrome": "node scripts/build-chrome.js",
    "build:chrome:dev": "node scripts/build-chrome.js --dev",
    "build:firefox": "node scripts/build-firefox.js",
    "build:firefox:dev": "node scripts/build-firefox.js --dev",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "build:all:dev": "npm run build:chrome:dev && npm run build:firefox:dev",
    "i18n:check": "node scripts/check-translations.js",
    "i18n:sync": "node scripts/check-translations.js --fix",
    "locales:init": "node scripts/init-master.cjs",
    "locales:init:chrome": "node scripts/init-master.cjs chrome",
    "locales:init:firefox": "node scripts/init-master.cjs firefox",
    "locales:deploy": "node scripts/deploy-master.cjs",
    "locales:deploy:chrome": "node scripts/deploy-master.cjs chrome",
    "locales:deploy:firefox": "node scripts/deploy-master.cjs firefox",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "lucide-vue-next": "0.554.0",
    "vue": "3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.17",
    "@types/chrome": "0.0.268",
    "@types/node": "22.13.10",
    "@vitejs/plugin-vue": "5.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.4.0",
    "autoprefixer": "10.4.22",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "9.39.1",
    "eslint-plugin-vue": "9.32.0",
    "postcss": "8.5.6",
    "prettier": "3.5.1",
    "tailwindcss": "4.1.17",
    "terser": "5.44.1",
    "typescript": "5.8.3",
    "vite": "6.1.0",
    "vitest": "^4.0.18",
    "vue-tsc": "3.1.3"
  }
}
